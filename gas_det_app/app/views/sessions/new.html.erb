<h1> Sign-In here :  </h1>

<%= form_with url: sessions_path, method: "post" do |form| %> 
    <p>Email-ID   : <%= form.email_field :email_id, required: true  %> </p>
    <p>Password   : <%= form.password_field :password, required: true  %> </p>
    <p><%= flash[:error] %></p>
    <p><%= form.submit :"Sign In--=>"%> </p>
<% end %>

<p> New User? <%= link_to :"Click here to sign-up", new_user_path %> </p>